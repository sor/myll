<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net48;netcoreapp3.1</TargetFrameworks>
		<LangVersion>8</LangVersion>
		<AssemblyName>myll</AssemblyName>
		<RootNamespace>Myll</RootNamespace>
		<Authors>Jan "SoRDiD" Reitz</Authors>
		<Description>Frontend of the Myll Programming Language</Description>
		<OutputType>Exe</OutputType>
	</PropertyGroup>

	<ItemGroup>
	  <ProjectReference Include="..\backend\backend.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <Content Include="main.myll">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </Content>
	  <Content Include="stack.myll">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </Content>
	  <Content Include="testcase.myll">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </Content>
	</ItemGroup>

</Project>
